<?php

use App\Http\Controllers\Auth\AuthController;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Route;
use \App\Http\Controllers\SettingController;
/*
|--------------------------------------------------------------------------
| API Routes
|--------------------------------------------------------------------------
|
| Here is where you can register API routes for your application. These
| routes are loaded by the RouteServiceProvider within a group which
| is assigned the "api" middleware group. Enjoy building your API!
|
*/
Route::get('app-supporting-data', [SettingController::class, 'appSupportingData']);
Route::post('login', [AuthController::class, 'login'])->middleware('throttle:10000,1');

Route::group(['middleware' => 'jwt:api'], function () {
    Route::post('logout', [AuthController::class, 'logout']);
    Route::post('refresh', [AuthController::class, 'refresh']);
    Route::post('me', [AuthController::class, 'me']);
});

//User List
Route::group(['prefix' => 'users'],function () {
    Route::post('list',[\App\Http\Controllers\Users\UserController::class,'index']);
    Route::get('supporting-data',[\App\Http\Controllers\Users\UserController::class,'getSupportingData']);
    Route::get('add',[\App\Http\Controllers\Users\UserController::class,'storeUser']);




});
